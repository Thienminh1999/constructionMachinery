<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <filter>
        <filter-name>FilterDispatcher</filter-name>
        <filter-class>minhnlt.controller.FilterDispatcher</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FilterDispatcher</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>LoadDefaultServlet</servlet-name>
        <servlet-class>minhnlt.controller.LoadDefaultServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateFormServlet</servlet-name>
        <servlet-class>minhnlt.controller.CreateFormServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddEmployeeServlet</servlet-name>
        <servlet-class>minhnlt.controller.AddEmployeeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadCreatePageServlet</servlet-name>
        <servlet-class>minhnlt.controller.LoadCreatePageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteEmployeeServlet</servlet-name>
        <servlet-class>minhnlt.controller.DeleteEmployeeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>modifyEmployeesServlet</servlet-name>
        <servlet-class>minhnlt.controller.modifyEmployeesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loadInforPageServlet</servlet-name>
        <servlet-class>minhnlt.controller.loadInforPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoadDefaultServlet</servlet-name>
        <url-pattern>/LoadDefaultServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateFormServlet</servlet-name>
        <url-pattern>/CreateFormServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddEmployeeServlet</servlet-name>
        <url-pattern>/AddEmployeeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadCreatePageServlet</servlet-name>
        <url-pattern>/LoadCreatePageServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteEmployeeServlet</servlet-name>
        <url-pattern>/DeleteEmployeeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>modifyEmployeesServlet</servlet-name>
        <url-pattern>/modifyEmployeesServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loadInforPageServlet</servlet-name>
        <url-pattern>/loadInforPageServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <resource-ref>
        <res-ref-name>P0043</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
